<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="/javascripts/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <title>Document</title>
  </head>
  <body>
    <div
      class="container"
      style="align-items: center; display: inline; text-align: center"
    >
<h2>Login</h2>

      <form id="login" class="form con">
       
        <div class="form-group">
          <label> Email </label>
        </br>
          <input type="email" id="email" name="email" placeholder="Email" required />
        </div>
        <div class="form-group">
          <label>Password </label>
        </br>
          <input type="password" id="password" name="password" placeholder="Password" required />
        </div>

          <input class="btn btn-success" type="submit"/>
      </form>
    </br>
      <a
      class="btn btn-primary"
        href="/"
        >Home</a
      >
      <a
      class="btn btn-primary"
        href="/product"
        >Product</a
      >
      <a
      class="btn btn-primary"
        href="/about"
        >About page</a
      >
    </div>
  </body>
</html>

<script>
  $('document').ready(function(){

    $('#login').submit(async function(e){
    e.preventDefault()

    let email=$('#email').val();
    let password=$('#password').val();
    console.log('%c Email and Password--',
    'background-color:yellow;color:black',
    email+'\n'+password
    )

    try{
      const res=await fetch('/login',{
        method:'POST',
        body:JSON.stringify({
          email:email,
          password:password,
        }),
        headers:{'Content-type':'application/json'}
      })
      const data=await res.json()
      console.table('%clogin Data--',
      'background-color:green;color:red',
      data)
      
      if(data.user)
      {
        console.log('Success')
        location.assign('/')
      }
    }
    catch(error){
      console.table(
        '%cerrors in login--',
        'background-color:red;color:white',
        error)
    }
  })
  })
</script>